
@{
    ViewBag.Title = "ManageCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@section topright{
    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-pencil-square-o"></i>
                Template Settings
                <span>
                    >
                    Manage
                </span>
            </h1>
        </div>
        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
            <!-- Button trigger modal -->
        </div>
    </div>
}
<!-- MAIN CONTENT -->
<div id="content" data-ng-controller="TemplateController">
    <div id="MessageArea" class="alert alert-block alert-{{MessageClass}}" style="display:none;">
        <a class="close" data-dismiss="alert" href="#">×</a>
        <h4 class="alert-heading"><i class="fa fa-check-square-o"></i> {{MessageTitle}}</h4>
        <p>
            {{Message}}
        </p>
    </div>
    <!-- widget grid -->
    <section id="widget-grid" class="" data-ng-init="ManageCategoryInit()">
        <input type="hidden" id="hidCategoryid" name="hidCategoryid" value="@ViewBag.CategoryID" />
        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-6">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Manage Template</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <form id="checkout-form" class="smart-form" novalidate="novalidate">
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-check-circle"></i>
                                                <input type="text" name="TemplateCategoryName" id="TemplateCategoryName" data-ng-model="Category.TemplateCategoryName" placeholder="TemplateCategoryName Name">
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-check-circle"></i>
                                                <input type="number" name="FreeTrailDays" id="FreeTrailDays" data-ng-model="Category.FreeTrailDays" placeholder="Free Trail Days">
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-check-circle"></i>
                                                <input type="text" name="MonthlyPrice" id="MonthlyPrice" data-ng-model="Category.MonthlyPrice" placeholder="Monthly Price">
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-check-circle"></i>
                                                <input type="text" name="SetupFee" id="SetupFee" data-ng-model="Category.SetupFee" placeholder="Setup Fee">
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>
                                <footer>
                                    <button type="submit" id="btnEdit" data-ng-click="AddCategory()" class="btn btn-primary">
                                        Add
                                    </button>
                                     <button type="submit" id="btnEdit" data-ng-click="UpdateCategory()" class="btn btn-primary">
                                        Update
                                    </button>
                                    <button type="submit" id="btnCancel" data-ng-click="CancelCategory()" class="btn btn-default">
                                        Cancel
                                    </button>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>
